<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockEmulator.Pages.SignUpPage">

  <StackLayout Orientation="Vertical" Margin="10,0,10,0">

    <Entry x:Name="fullname" Placeholder="Full Name" />
    <Entry x:Name="username" Placeholder="Email" />
    <Entry x:Name="password" IsPassword="True" Placeholder="Password" />
    <Entry x:Name="confirmPassword" IsPassword="True" Placeholder="Confirm Password" />
    <Label Text="Stock Exchange Country" />
    <Picker x:Name="country" />
    <Label Text="First Security Question" />
    <Picker x:Name="firstQuestion" />
    <Entry x:Name="firstAnswer" Placeholder="Answer to above question" />
    <Label Text="Second Security Question" />
    <Picker x:Name="secondQuestion" />
    <Entry x:Name="secondAnswer" Placeholder="Answer to above question" />
    <Button Text="REGISTER NEW ACCOUNT" Margin="20,0,20,0" BackgroundColor="#2196f3" Clicked="Register"/>
    <Label x:Name="loginPage" Text="Already Registered? Click to Login" TextColor="#2196f3"/>
  </StackLayout>
</ContentPage>