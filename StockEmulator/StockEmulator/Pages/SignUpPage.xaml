<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockEmulator.Pages.SignUpPage">

  <StackLayout Orientation="Vertical" Margin="10,0,10,0">

    <Entry x:Name="fullname" Placeholder="Full Name" />
    <Entry x:Name="email" Placeholder="Email" />
    <Entry x:Name="pass" Placeholder="Password" />
    <Entry x:Name="confirm" Placeholder="Confirm Password" />
    <Label Text="Stock Exchange Country" />
    <Picker x:Name="country" />
    <Label Text="First Security Question" />
    <Picker x:Name="firstquestion" />
    <Entry Placeholder="Answer to above question" />
    <Label Text="Second Security Question" />
    <Picker x:Name="secondquestion" />
    <Entry Placeholder="Answer to above question" />
    <Button x:Name="signup" Text="REGISTER NEW ACCOUNT" Margin="20,0,20,0" BackgroundColor="#2196f3" />
    <Label x:Name="loginpage" Text="Already Registered? Click to Login" TextColor="#2196f3"/>
  </StackLayout>
</ContentPage>