<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockEmulator.Pages.LoginPage">

  <StackLayout Margin="10,0,10,0">
  <StackLayout Orientation="Vertical">
    <Label Text="Username"/>
    <Entry x:Name="username" Placeholder="email@gmail.com" />
    <Label Text="Password"/>
    <Entry x:Name="password" IsPassword="True" Placeholder="Password" />

    <Button Text="Login" Clicked="PressLogin" BackgroundColor="#2196f3"/>
    <Label x:Name="SignUp" Text="New to Stock Trainer? Register Here" TextColor="#2196f3" />
    <Label Text="Forgot Password? Click to Retrieve" TextColor="#2196f3" />



  </StackLayout>
  </StackLayout>
</ContentPage>