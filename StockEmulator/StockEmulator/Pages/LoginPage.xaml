<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockEmulator.Pages.LoginPage">

  <ScrollView>
    <StackLayout>
      <Image Source="LoginImage.jpg"></Image>
      <StackLayout Margin="10,0,10,0" Orientation="Vertical">
        <Label Text="Username" FontAttributes="Bold" FontSize="15"/>
        <Entry x:Name="username" Placeholder="email@gmail.com" />
        <Label Text="Password" FontAttributes="Bold" FontSize="15"/>
        <Entry x:Name="password" IsPassword="True" Placeholder="Password" />

        <Button x:Name="loginButton" Text="Login" Clicked="PressLogin" BackgroundColor="#2196f3" IsEnabled="false"/>
        <Label x:Name="SignUp" Text="New to Stock Trainer? Register Here" TextColor="#2196f3" />
        <Label Text="Forgot Password? Click to Retrieve" TextColor="#2196f3" />
      </StackLayout>
    </StackLayout>
  </ScrollView>
</ContentPage>