<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockEmulator.Pages.SellPage"
             Title="Place Order">
  <ScrollView>
    <StackLayout Margin="5,5,5,0" VerticalOptions="FillAndExpand">

      <StackLayout Orientation="Horizontal" VerticalOptions="FillAndExpand">
        <StackLayout x:Name="StackLayoutEquityName" Orientation="Horizontal">
          <Label x:Name="EquityName" FontSize="15" LineBreakMode="WordWrap"/>
        </StackLayout>
        <StackLayout x:Name="StackLayoutTickerPrice" Orientation="Horizontal">
          <Label x:Name="Ticker" TextColor="#EB0921" FontSize="15" HorizontalTextAlignment="Center"/>
          <Label x:Name="Price" TextColor="#09B4EB" FontSize="15" HorizontalTextAlignment="Center"/>
        </StackLayout>
      </StackLayout>

      <StackLayout Orientation="Horizontal" VerticalOptions="FillAndExpand">
        <Label x:Name="SellQuantityLabel" Text="Sell Quantity" FontSize="15" TextColor="#09B4EB"/>
        <StackLayout>
          <Entry x:Name="SellQuantity" Keyboard="Numeric" TextChanged="SellQuantity_TextChanged"/>
        </StackLayout>
      </StackLayout>

      <StackLayout Orientation="Horizontal" VerticalOptions="FillAndExpand">
        <Label x:Name="AvailableFundsLabel" Text="Available Funds" FontSize="15" TextColor="#09B4EB"/>
        <Label x:Name="AvailableFunds" FontSize="15" TextColor="#EB0921"/>
      </StackLayout>

      <StackLayout Orientation="Horizontal" VerticalOptions="FillAndExpand">
        <Label x:Name="SharesAvailableLabel" Text="Shares Available" FontSize="15" TextColor="#09B4EB"/>
        <Label x:Name="SharesAvailable" TextColor="#EB0921" FontSize="15"/>
      </StackLayout>

      <StackLayout Orientation="Horizontal" VerticalOptions="FillAndExpand">
        <Label x:Name="TotalProceedsLabel" Text="* Total Proceeds" FontSize="15" TextColor="#09B4EB"/>
        <Label x:Name="TotalProceeds" Text="0" FontSize="15" TextColor="#09B4EB"/>
      </StackLayout>

      <Label Text="* Transaction total includes trade commission fees." FontSize="15" TextColor="#09B4EB"/>

      <StackLayout Orientation="Horizontal">
        <Button Text="Cancel" Clicked = "PressCancel"/>
        <Button Text="Sell" Clicked = "PressSell"/>
      </StackLayout>

      <Label Text="" VerticalOptions="FillAndExpand"/>
    </StackLayout>
  </ScrollView>
</ContentPage>