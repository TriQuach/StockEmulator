<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockEmulator.MasterPage"
             Title="Menu">
  <StackLayout Spacing="0" Padding="0" Margin="0" VerticalOptions="FillAndExpand">

    <ScrollView>
      <StackLayout>
        <Image Source="b.jpg"></Image>
        <StackLayout Margin="18">
          <Label Text="Manage Account" FontAttributes="Bold" />
          <Label x:Name="username" Text="qmtri@apcs.vn"/>
        </StackLayout>
        <BoxView HeightRequest="1" BackgroundColor="Black" HorizontalOptions="FillAndExpand" Margin="0,10,0,0"/>
        <Label Text="Navigation" Margin="18" FontAttributes="Bold"/>
        <ListView x:Name="listMenu" HeightRequest="250"/>
        <BoxView HeightRequest="1" BackgroundColor="Black" HorizontalOptions="FillAndExpand" Margin="0,10,0,0"/>
        <Label Text="More" Margin="18" FontAttributes="Bold"/>
        <ListView x:Name="listMore" HeightRequest="130"/>
      </StackLayout>
    </ScrollView>
  </StackLayout>
</ContentPage>