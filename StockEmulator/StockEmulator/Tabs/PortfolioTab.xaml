<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockEmulator.Tabs.PortfolioTab"
             Title="Portfolio">

  
  <StackLayout Margin="0,0,0,0">
    <ActivityIndicator x:Name="loadingPortfolio" Color="Green"/>
    <StackLayout Orientation="Horizontal" HorizontalOptions="Start" BackgroundColor="#FFC107">
      <StackLayout Spacing="0" WidthRequest="90" Margin="5,0,0,0">
        <Label Text="Ticker" FontSize="11" VerticalOptions="Center" TextColor="#007FFF"/>
        <Label Text="Equity Name" FontSize="11" VerticalOptions="Center" LineBreakMode="TailTruncation" TextColor="#666666"/>
      </StackLayout>
      <StackLayout Spacing="0" WidthRequest="90">
        <Label Text="Price" FontSize="11" VerticalOptions="Center" HorizontalOptions="Center" TextColor="#000000"/>
        <Label Text="G\L" FontSize="11" VerticalOptions="Center" HorizontalOptions="Center" LineBreakMode="TailTruncation" TextColor="#000000"/>
      </StackLayout>
      <StackLayout Spacing="0" WidthRequest="70">
        <Label Text="Cost" FontSize="11" VerticalOptions="Center" HorizontalOptions="Center" TextColor="#000000"/>
      </StackLayout>
      <StackLayout Spacing="0" WidthRequest="80">
        <Label Text="Num" FontSize="11" VerticalOptions="Center" HorizontalOptions="Center" TextColor="#000000"/>
        <Label Text="$CHG" FontSize="11" VerticalOptions="Center" HorizontalOptions="Center" LineBreakMode="TailTruncation" TextColor="#000000"/>
      </StackLayout>
      <StackLayout Spacing="0" WidthRequest="90" Margin="0,0,5,0">
        <Label Text="Value" FontSize="11" VerticalOptions="Center" HorizontalOptions="End" TextColor="#000000"/>
        <Label Text="%CHG" FontSize="11" VerticalOptions="Center" HorizontalOptions="End" LineBreakMode="TailTruncation" TextColor="#000000"/>
      </StackLayout>
    </StackLayout>
    <ListView x:Name="lstView"
            >
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Orientation="Horizontal">
              <StackLayout Orientation="Vertical" Spacing="0" WidthRequest="90" Margin="5,0,0,0">
                <Label Text="{Binding Ticker}" FontSize="12" VerticalOptions="Center" TextColor="#007FFF"/>
                <Label Text="{Binding EquityName}" FontSize="11" VerticalOptions="Center" LineBreakMode="TailTruncation" TextColor="#666666"/>
              </StackLayout>
              <StackLayout Orientation="Vertical" Spacing="0" WidthRequest="150">
                <Label Text="{Binding Price}" FontSize="10" VerticalOptions="Center" HorizontalOptions="Center" TextColor="#000000"/>
                <Label Text="{Binding GainLossMoney, StringFormat='${0:0.000}'}" FontSize="11" VerticalOptions="Center" HorizontalOptions="Center" LineBreakMode="TailTruncation" TextColor="#000000"/>
              </StackLayout>
              <StackLayout Orientation="Vertical" Spacing="0" WidthRequest="70">
                <Label Text="{Binding Cost}" FontSize="12" VerticalOptions="Center" HorizontalOptions="Center" TextColor="#000000"/>
              </StackLayout>
              <StackLayout Orientation="Vertical" Spacing="0" WidthRequest="80">
                <Label Text="{Binding Num}" FontSize="12" VerticalOptions="Center" HorizontalOptions="Center" TextColor="#000000"/>
                <Label Text="{Binding DollarCHG}" FontSize="12" VerticalOptions="Center" HorizontalOptions="Center" LineBreakMode="TailTruncation" TextColor="#000000"/>
              </StackLayout>
              <StackLayout Orientation="Vertical" Spacing="0" WidthRequest="90" Margin="0,0,5,0">
                <Label Text="{Binding Value}" FontSize="12" VerticalOptions="Center" HorizontalOptions="End" TextColor="#000000"/>
                <Label Text="{Binding PerCentCHG}" FontSize="12" VerticalOptions="Center" HorizontalOptions="End" LineBreakMode="TailTruncation" TextColor="#000000"/>
              </StackLayout>
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>

  </StackLayout>
</ContentPage>